            case "Y","y" -> Quiz(); 
            case "N","n" -> System.exit(0);
}
        
    return 0;
    }
    public static void Quiz() {
        Quiz.points = 0;
        quiz();
    }


    public static void quiz() {
        String answer = JOptionPane.showInputDialog(null, "Welcome to Isaac's Geography Quiz.\n"+
                "Select difficulty\n"+
                "A. Easy\n" +
                "B. Medium\n" +
                "C. Hard");
        switch (answer){
            case "A", "a" -> easy();
            case "B", "b" -> medium();
            case "C", "c" -> hard();        
    }
    }
