    public static int result3() {
        String name = JOptionPane.showInputDialog(null,"You finished the quiz.\n"
                + "Enter your name.");
        if (points == 8)
        {
            JOptionPane.showMessageDialog(null, "Name: " + name + "\nTotal Score: " + points +"/8"+ "\n Perfect Score!");
        }else if(points >= 4) {
            JOptionPane.showMessageDialog(null, "Name: " + name + "\nTotal Score: " + points +"/8"+ "\n Pass");
        }else{
            JOptionPane.showMessageDialog(null, "Name: " + name + "\nTotal Score: " + points +"/8"+ "\n Fail");
