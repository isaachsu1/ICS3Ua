    public static void main(String[] args) {
        String answer = JOptionPane.showInputDialog(null, "Welcome to Isaac's Geography Quiz.\n"+
                "Select difficulty\n"+
                "A. Easy\n" +
                "B. Medium\n" +
                "C. Hard");
        switch (answer){
            case "A", "a" -> easy();
            case "B", "b" -> medium();
            case "C", "c" -> hard();

    }
    }

