    public static int result1() {
        String name = JOptionPane.showInputDialog(null,"You finished the quiz.\n"
                + "Enter your name.");
        if (points == 6)
        {
            JOptionPane.showMessageDialog(null, "Name: " + name + "\nTotal Score: " + points +"/6"+"\n Perfect Score!");
        }else if(points >= 3) {
            JOptionPane.showMessageDialog(null, "Name: " + name + "\nTotal Score: " + points +"/6"+ "\n Pass");
        }else{
            JOptionPane.showMessageDialog(null, "Name: " + name + "\nTotal Score: " + points +"/6"+"\n Fail");
        }
        String answer = JOptionPane.showInputDialog(null,"Do you want to Restart or End the quiz?\n" +
        "Enter (Y) to restart the quiz\n" +
        "Enter (N) to end the quiz");
        switch (answer){
            case "Y","y" -> Quiz(); 
            case "N","n" -> System.exit(0);
}
        
    return 0;
    }
    public static int result2() {
