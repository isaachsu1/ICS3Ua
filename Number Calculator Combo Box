    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        String itemSelected = jComboBox1.getSelectedItem()+"";
        jLabel5.setText(itemSelected);
        float num1, num2, sum;
        num1=Float.parseFloat(jTextField1.getText());
        num2=Float.parseFloat(jTextField2.getText());
        sum = 0;
        
        if (itemSelected.equals("Add")){
            sum = num1+num2;
        jLabel5.setText(String.valueOf(sum));
            }
        if (itemSelected.equals("Subtract")){
            sum = num1-num2;
        jLabel5.setText(String.valueOf(sum));
            }
        if (itemSelected.equals("Multiply")){
            sum = num1*num2;
        jLabel5.setText(String.valueOf(sum));
            }
        if (itemSelected.equals("Divide")){
            sum = num1/num2;
        jLabel5.setText(String.valueOf(sum));
            }
        
    }                                        

