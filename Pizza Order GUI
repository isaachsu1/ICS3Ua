    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        int value = (Integer) jSpinner1.getValue();
        int value1 = (Integer) jSpinner2.getValue();
        int x = 1;
        int y = 2;
        int A = 0;
        int B = 1;
        int C = 2;
        int D = 3;
        int E = 4;

        
        if(value==x){
          double a = 6.00;
        }
        if(value==y){
        double a = 10.00;
        }
        else{
            JOptionPane.showMessageDialog(this, "Invalide Pizza size");
        }
       
        
        if(value1==A){
        double b = 0.00;
        }
        if(value1==B){
        double b = 1.00;
        }
        if(value1==C){
        double b = 1.75;
        }
        if(value1==D){
        double b = 2.50;
        }
        if(value1==E){
        double b = 3.25;
        }
        else{
            JOptionPane.showMessageDialog(this, "Invalide Topping number");
        }
        
        
        double total =a+b;
        double PST = (total/100)*8;
        double GST = (total/100)*6;
        double Ftotal = total + PST + GST;
        
        jLabel7.setText(String.valueOf(total));
        jLabel8.setText(String.valueOf(PST));
        jLabel9.setText(String.valueOf(GST));
        jLabel10.setText(String.valueOf(Ftotal));       
    }                                        

