import java.util.Scanner;

class Main {

  public static void main(String args[]) {
    

    Scanner in = new Scanner(System.in);
    System.out.println("Enter number below:");
    int num = in.nextInt();
    int sum = 0;

    for (int i = 1; i <= num; i++) {
      sum += i;
    }

    System.out.println("The sum of the first " + num + " numbers is " + sum);
  }
}
